@model Farmerce.Models.Products
@inject Farmerce.Data.ApplicationDbContext _context;

@{
    ViewData["Title"] = "Update";
    var catList = _context.Category.ToList();
}
<link href="~/css/StyleSheet.css" rel="stylesheet" />
<h1>Update</h1>

<h4>Products</h4>
<hr />
<body class="BG">
    <div class="row" id="font">
        <div class="col-md-4">
            <form asp-action="Update">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProductID" />
                <div class="form-group">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductPrice" class="control-label"></label>
                    <input asp-for="ProductPrice" class="form-control" />
                    <span asp-validation-for="ProductPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductMeasurement" class="control-label"></label>
                    <input asp-for="ProductMeasurement" class="form-control" />
                    <span asp-validation-for="ProductMeasurement" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StocksLeft" class="control-label"></label>
                    <input asp-for="StocksLeft" class="form-control" />
                    <span asp-validation-for="StocksLeft" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImagePath" class="control-label"></label>
                    <input asp-for="ImagePath" class="form-control" type="file" accept="image/*" />
                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CatID" class="control-label"></label>
                    <select asp-for="CatID" class="form-control" asp-items="@(new SelectList(catList, "CatID", "CatName"))"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
